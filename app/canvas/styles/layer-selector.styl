:host {
	position: absolute;
	top: 1em;
	right: 1em;
	z-index: 2;
	max-width: 20em;
	user-select: none;
}

.layer-shower {
	cursor: pointer;
}

.layer-item {
	background: #fff;
	border: 1px solid rgba(0, 0, 0, .5);
	box-shadow: 1px 1px 0.25em rgba(0, 0, 0, .5);
	border-radius: 0.25em;
}

.layer-image {
	cursor: pointer;

	background-position: 50%;
	background-size: cover;
	width: 3em;
	height: 3em;
}

